{% block page_account_profile_2fa_disable %}
    <h3>{{ "rl-2fa.account.disable.title"|trans|sw_sanitize }}</h3>

    <p>
        {{ "rl-2fa.account.disable.description"|trans|sw_sanitize }}
    </p>

    <form method="POST"
          action="{{ url('widgets.rl-2fa.profile.disable.post') }}">
        <p>
            {% block page_account_profile_2fa_disable_input %}
            <input type="password"
                   class="form-control"
                   id="otpPassword"
                   placeholder="{{ "rl-2fa.account.disable.password"|trans|striptags }}"
                   name="otpPassword"
                   required="required">
            {% endblock %}
        </p>

        {% block page_account_profile_2fa_disable_button %}
            <button type="submit" class="account-profile-2fa-setup-verify btn btn-danger btn-block">
                {{ "rl-2fa.account.disable.submit"|trans|sw_sanitize }}
            </button>
        {% endblock %}
    </form>
{% endblock %}
